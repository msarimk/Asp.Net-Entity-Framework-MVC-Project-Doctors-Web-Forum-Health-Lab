@model IEnumerable<WebApp.tbl_gallery>

@{
    ViewBag.Title = "Gallery";
    Layout = "~/Views/HeaderFooter.cshtml";
}
<div class="container">

    <h2>Gallery</h2>

    <p>
        @Html.ActionLink("Create New", "AddGallery")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Titles)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Images)
            </th>
            <th>Actions</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Titles)
                </td>
                <td>
                    <img width="50px" src="~/GalleryImages/@Html.DisplayFor(modelItem => item.Images)"/>
                </td>
                <td>
                    @Html.ActionLink("Edit", "UpdateGallery", new { id = item.id }) |
                    @Html.ActionLink("Delete", "DeleteGallery", new { id = item.id })
                </td>
            </tr>
        }

    </table>
</div>
