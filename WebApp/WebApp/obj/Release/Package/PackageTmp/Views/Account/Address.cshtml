@model IEnumerable<WebApp.tbl_address>

@{
    ViewBag.Title = "Address";
    Layout = "~/Views/HeaderFooter.cshtml";
}
<div class="container">

    <h2>Address</h2>

    <p>
        @Html.ActionLink("Create New", "AddAddress")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Icons)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Titles)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnchorLinks)
            </th>
            <th>Actions</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <i class="fa @Html.DisplayFor(modelItem => item.Icons)" aria-hidden="true"></i>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Titles)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AnchorLinks)
                </td>
                <td>
                    @Html.ActionLink("Edit", "UpdateAddress", new { id = item.id }) |
                    @Html.ActionLink("Delete", "DeleteAddress", new { id = item.id })
                </td>
            </tr>
        }

    </table>
</div>
